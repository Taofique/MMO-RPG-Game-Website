//

{
  "compilerOptions": {
    "target": "ES2020", // Good modern JavaScript version
    "module": "ESNext", // Enables ES6+ module syntax (import/export)
    "moduleResolution": "node",
    "rootDir": "./src",
    "outDir": "./dist",
    "strict": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true
  }
}
